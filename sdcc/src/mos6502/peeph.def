////////////////////////////////////////////////////////
// Rules for common codegen patterns
////////////////////////////////////////////////////////

replace restart {
	sta	%1
	stx	%2
	lda	%1
	sta	%3
	lda	%2
	sta	%4
} by {
	sta	%1
	stx	%2
    ; Peephole Function_Entry_1 - eliminated unnecessary lda %1
	sta	%3
    ; Peephole Function_Entry_1 - eliminated unnecessary lda %2
	stx	%4
} if notVolatile(%1), notVolatile(%2)

replace restart {
	sta	%1
	stx	%2
	lda	%2
	sta	%4
	lda	%1
	sta	%3
} by {
	sta	%1
	stx	%2
    ; Peephole Function_Entry_1a - eliminated unnecessary lda %1
	sta	%3
    ; Peephole Function_Entry_1a - eliminated unnecessary lda %2
	stx	%4
} if notVolatile(%1), notVolatile(%2)

replace restart {
	sta	%1
	stx	%2
	lda     %1
	ldx     %2
} by {
	sta	%1
	stx	%2
    ; Peephole Function_Entry_2 - eliminated redundant lda %1/ldx %2
} if notVolatile(%1), notVolatile(%2)

replace restart {
	sta	%1
	stx	%2
	ldx     %2
	lda     %1
} by {
	sta	%1
	stx	%2
    ; Peephole Function_Entry_2a - eliminated redundant lda %1/ldx %2
} if notVolatile(%1), notVolatile(%2)

replace restart {
	ldx	%1
	ldy	%2
	clc
	txa
	adc	%3
	sta	%4
	tya
	adc     %5
	sta	%6
} by {
    ; Peephole genpointer YX   - eliminated ldx/ldy
	lda	%1
    ; Peephole genpointer YX   - replaced txa with lda
	clc
	adc	%3
	sta	%4
	lda	%2
    ; Peephole genpointer YX   - replaced tya with lda
	adc	%5
	sta	%6
}

